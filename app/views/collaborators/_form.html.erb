<h1>Add a Collaborator to the current Wiki</h1>

<div class="row">
  <div class="col-md-8">
  <% current_user.admin? || current_user.premium? %>
    <div class="form-group">
      <%= form_for [@wiki, Collaborator.new] do |f| %>
        <%= f.label :collaborators %>
        <%= f.select :user, options_for_select(@user_emails, :selected => params[:user]) %>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
    <% end %> 
    <% if @wiki.users.any? %>
      <h3>Current Collaborators</h3>
      <% @wiki.collaborators.each do |c| %>
        <ul>
        <li><%= c.user.email %>  |  <%= link_to "x", wiki_collaborator_path(@wiki, c), method: :delete %></li>
        </ul>
      <% end %>   
    <% end %>    
    </div>
  <% else %>
    <h3>Current Collaborators</h3>
    <% @wiki.collaborators.each do |c| %>
      <% if @user.email == current_user.email %>
        <ul>
          <li><%= c.user.email %>  |  <%= link_to "x", wiki_collaborator_path(@wiki, c), method: :delete %></li>
        </ul>
      <% end %>
    <% end %> 
  </div>  
</div> 


