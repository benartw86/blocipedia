<h1>Add a Collaborator to the current Wiki</h1>

<div class="row">
  <% if current_user.admin? || current_user.premium? %>
    <div class="field">
      <%= form_for [@wiki, Collaborator.new] do |f| %>
        <%= f.label :collaborators %>
        <%= f.select :user, options_for_select(@user_emails, :selected => params[:user]) %>
      <% f.submit 'Save' %>
    <% end %> 
    <% if @wiki.users.any? %>
      <h3>Current Collaborators</h3>
      <%= @wiki.users.each do |user| %>
        <p><%= user.email %>
        |  <%= link_to "x", wiki_collaborator_path(user_id: @user_id, wiki_id: @wiki_id), method: :delete %>
        </p>
      <% end %>   
    <% end %>    
    </div>
  <% else %>
    <h3>Current Collaborators</h3>
    <% @wiki.users.each do |user| %>
      <% if user.email == current_user.email %>
      <p><%= current_user.email %>
      |  <%= link_to "x", wiki_collaborator_path(user_id: @user_id, wiki_id: @wiki_id), method: :delete %>
      </p>
      <% end %>
    <% end %>  
  <% end %>    
</div> 


