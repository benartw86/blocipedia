
  <div class="jumbotron">
    <h1><%= @wiki.title %></h1>
  </div>
  
  <div class="col-md-8">
    <div class="well">
      <p><%= @wiki.body%></p>      
    </div>      
  </div>
    </br>
  <div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn-lg btn-success' %>          
    <% if policy(@wiki).destroy? %>
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn-lg btn-danger', data: {confirm: 'Are you sure you want to delete this wiki forever?'} %>
    <% end %>
  </div>
